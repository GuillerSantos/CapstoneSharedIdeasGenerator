    </MudContainer>

    <MudContainer Class="d-none d-md-flex">
        <MudImage Class="position-absolute bottom-0 end-0" Style="max-height: 100%; max-width: 100%; height: 500px; width: 500px" Src="Images/Company-amico.svg"></MudImage>
